<script type="text/javascript">
/*<![CDATA[*/
jQuery(function($) {
jQuery('#yw1').yiiListView({'ajaxUpdate':['yw1'],'ajaxVar':'ajax','pagerClass':'pager','loadingClass':'list-view-loading','sorterClass':'sorter','enableHistory':false,'afterAjaxUpdate':function(id, data) {
		$(document).scrollTop(0);
		id = $(data).find('.yiiPager .selected a').text();
		page = {};
		page['page'] = id;
		$.bbq.pushState( page );
	}});
$(window).bind( 'hashchange', function(e) {
		var pagenumber = $.bbq.getState( 'page' ) || '';
		var id = 'yw1';
		var url = 'http://socionicasys.org/novosti?News_page=' + pagenumber;
		$.fn.yiiListView.update(id, {url: url});
	})
$('#random-quote').hide().delay(750).fadeIn(1750);
});
/*]]>*/
</script>
